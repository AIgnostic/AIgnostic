{
  "name": "aignostic",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "aignostic/aignostic",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry lock --no-update",
        "cwd": "aignostic"
      }
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "aignostic/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "cacheDir": ".cache/pypoetry",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:flake8",
      "outputs": [
        "{workspaceRoot}/reports/aignostic/pylint.txt"
      ],
      "options": {
        "outputFile": "reports/aignostic/pylint.txt"
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/aignostic/unittests",
        "{workspaceRoot}/coverage/aignostic"
      ],
      "options": {
        "command": "poetry run pytest tests/",
        "cwd": "aignostic"
      },
      "cache": true
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "{workspaceRoot}",
        "file": "{workspaceRoot}/aignostic/Dockerfile",
        "metadata": {
          "images": [
            "ghcr.io/aignostic/aignostic"
          ],
          "load": true,
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-",
            "type=raw,value=latest"
          ]
        }
      }
    },
    "serve": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run uvicorn main:create_application --reload",
        "cwd": "aignostic"
      }
    },
    "type-checks": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "poetry run mypy .",
        "cwd": "aignostic"
      }
    }
  },
  "tags": [],
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  }
}